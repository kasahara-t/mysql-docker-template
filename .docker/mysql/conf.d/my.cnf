[mysqld]
# Slow Query
slow_query_log = on
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 1
log_queries_not_using_indexes = on

# Timezone
default-time-zone='Asia/Tokyo'

# Charset
character_set_server = utf8mb4

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4